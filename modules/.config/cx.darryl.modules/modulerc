#%Module

# TODO detect or otherwise abstract namespace
module use [file join $XDG_DATA_HOME cx.darryl.modules modulefiles]

# module load env
module load brew/shellenv
module load brew/completions
module load git
module load vim

module load bash/aliases
module load bash/color
module load bash/completions
module load bash/env
module load bash/prompt
module load bash/history

module load shell/aliases
module load less

# TODO load from $XDG_CONFIG_HOME/*.modules/rc.d/*?
set rc_dir [file join $XDG_CONFIG_HOME cx.darryl.modules rc.d]
if {[file exists $rc_dir]} {
    foreach init_script [lsort [glob -nocomplain $rc_dir/*.tcl]] {
        source $init_script
    }
}

module load shell/path
