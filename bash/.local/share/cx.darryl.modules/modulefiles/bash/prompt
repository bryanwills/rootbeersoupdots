#%Module

module-whatis "Bash prompt configuration"

variant --default basename pwd basename full none

switch -- [getvariant --return-value pwd] {
    basename { set pwd {\W } }
    full     { set pwd {\w } }
    none     { set pwd ""   }
}
    
append pwd {\[$(tput -T xterm-256color bold)\]\$\[$(tput -T xterm-256color sgr0)\] }

setenv PS1 $pwd
